extends ../layout/common
block content
    h1 Login
    if errors
        each error in errors
            .alert.alert-danger= error
    form(method="POST")
        .form-group
            label(for="email") Email
            input#name.form-control(type='text', name='email',value= values? values.email:'')
        .form-group
            label Password
            input.form-control(type='password', name='password',value=values?values.password:'')
        button(class='btn-primary') Login
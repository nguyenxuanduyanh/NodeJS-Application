extends ../layout/common
block content
    h1 Create User
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/userlist/createuser",method="POST")
        .form-group
            label(for="name") Name
            input#name.form-control(type='text', name='name',value= values? values.name:'')
        .form-group
            label Phone
            input.form-control(type='text', name='phone',value=values?values.phone:'')
        button(class='btn-primary') Create
